{
    "name": "ahmedashraf093/better-eloquent-state-machine",
    "description": "State machines for your Laravel Eloquent models",
    "keywords": [
        "ahmedashraf093",
        "better-eloquent-state-machine"
    ],
    "homepage": "https://github.com/ahmedashraf093/better-eloquent-state-machine",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Andrés Santibáñez",
            "email": "santibanez.andres@gmail.com",
            "role": "Developer"
        },
        {
            "name": "Ahmed Ashraf",
            "email": "ahmedashraf093@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.3|^7.4|^8.0",
        "illuminate/support": "^6.0|^7.0|^8.0|^9.0|^10.0",
        "javoscript/laravel-macroable-models": "^1.0"
    },
    "require-dev": {
        "laravel/legacy-factories": "^1.0.4",
        "orchestra/testbench": "^4.0|^5.0|^6.0|^7.0|^8.0",
        "phpunit/phpunit": "^8.0|^9.0"
    },
    "autoload": {
        "psr-4": {
            "Ashraf\\EloquentStateMachine\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Ashraf\\EloquentStateMachine\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Ashraf\\EloquentStateMachine\\LaravelEloquentStateMachinesServiceProvider"
            ]
        }
    }
}
